@article{nelson_quantitative_2014,
        title = {Quantitative {Trait} {Loci} for {Thermal} {Time} to {Flowering} and {Photoperiod} {Responsiveness} {Discovered} in {Summer} {Annual}-{Type} {Brassica} napus {L}},
        volume = {9},
        issn = {1932-6203},
        url = {http://journals.plos.org/plosone/article?id=10.1371/journal.pone.0102611},
        doi = {10.1371/journal.pone.0102611},
        abstract = {Time of flowering is a key adaptive trait in plants and is conditioned by the interaction of genes and environmental cues including length of photoperiod, ambient temperature and vernalisation. Here we investigated the photoperiod responsiveness of summer annual-types of Brassica napus (rapeseed, canola). A population of 131 doubled haploid lines derived from a cross between European and Australian parents was evaluated for days to flowering, thermal time to flowering (measured in degree-days) and the number of leaf nodes at flowering in a compact and efficient glasshouse-based experiment with replicated short and long day treatments. All three traits were under strong genetic control with heritability estimates ranging from 0.85–0.93. There was a very strong photoperiod effect with flowering in the population accelerated by 765 degree-days in the long day versus short day treatments. However, there was a strong genetic correlation of line effects (0.91) between the long and short day treatments and relatively low genotype x treatment interaction indicating that photoperiod had a similar effect across the population. Bivariate analysis of thermal time to flowering in short and long days revealed three main effect quantitative trait loci (QTLs) that accounted for 57.7\% of the variation in the population and no significant interaction QTLs. These results provided insight into the contrasting adaptations of Australian and European varieties. Both parents responded to photoperiod and their alleles shifted the population to earlier flowering under long days. In addition, segregation of QTLs in the population caused wide transgressive segregation in thermal time to flowering. Potential candidate flowering time homologues located near QTLs were identified with the aid of the Brassica rapa reference genome sequence. We discuss how these results will help to guide the breeding of summer annual types of B. napus adapted to new and changing environments.},
        number = {7},
        urldate = {2017-06-01},
        journal = {PLOS ONE},
        author = {Nelson, Matthew N. and Rajasekaran, Ravikesavan and Smith, Alison and Chen, Sheng and Beeck, Cameron P. and Siddique, Kadambot H. M. and Cowling, Wallace A.},
        month = jul,
        year = {2014},
        keywords = {a, b, c, d, e, F, G, h, i, l, m, n, o, p, Q, r, s, t, u, v, w},
        pages = {e102611},
        file = {Full Text PDF:/home/jonesd/.zotero/zotero/83sk7r1s.default/zotero/storage/JR2X8P2A/Nelson et al. - 2014 - Quantitative Trait Loci for Thermal Time to Flower.pdf:application/pdf;Snapshot:/home/jonesd/.zotero/zotero/83sk7r1s.default/zotero/storage/7KCN4HE6/article.html:text/html}
}

