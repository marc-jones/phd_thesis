        author = {Wang, Jianlin and Tian, Lu and Lee, Hyeon-Se and Wei, Ning E. and Jiang, Hongmei and Watson, Brian and Madlung, Andreas and Osborn, Thomas C. and Doerge, R. W. and Comai, Luca and Chen, Z. Jeffrey},
