@article{deal_repression_2007,
	title = {Repression of {Flowering} in \textit{{Arabidopsis}} {Requires} {Activation} of \textit{{FLOWERING} {LOCUS} {C}} {Expression} by the {Histone} {Variant} {H}2A.{Z}},
