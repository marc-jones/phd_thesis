}

@article{le_corre_dna_2002,
	title = {{DNA} {Polymorphism} at the {FRIGIDA} {Gene} in {Arabidopsis} thaliana: {Extensive} {Nonsynonymous} {Variation} {Is} {Consistent} with {Local} {Selection} for {Flowering} {Time}},
	volume = {19},
	issn = {0737-4038},
