        journal = {BMC Ecology},
        author = {Zou, Yi and Xiao, Haijun and Bianchi, Felix J. J. A. and Jauker, Frank and Luo, Shudong and van der Werf, Wopke},
        month = feb,
        year = {2017},
        pmid = {28222708},
        pmcid = {PMC5320672},
        file = {PubMed Central Full Text PDF:/home/jonesd/.zotero/zotero/83sk7r1s.default/zotero/storage/IKH23VKF/Zou et al. - 2017 - Wild pollinators enhance oilseed rape yield in sma.pdf:application/pdf}
}

