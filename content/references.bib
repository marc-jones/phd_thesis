	number = {3},
	journal = {The Plant Journal},
	author = {Jean Finnegan, E. and Bond, Donna M. and Buzas, Diana M. and Goodrich, Justin and Helliwell, Christopher A. and Tamada, Yosuke and Yun, Jae-Young and Amasino, Richard M. and Dennis, Elizabeth S.},
	month = feb,
	year = {2011},
	keywords = {bivalent domain, Chromatin, FLOWERING LOCUS C, LIKE-HETEROCHROMATIN PROTEIN 1, nucleosome, PRC2},
	pages = {382--391},
	file = {Full Text PDF:/media/shared/Zotero/storage/258Q3KC6/Jean Finnegan et al. - 2011 - Polycomb proteins regulate the quantitative induct.pdf:application/pdf;Snapshot:/media/shared/Zotero/storage/RWCXHGQ8/abstract.html:text/html}
}

