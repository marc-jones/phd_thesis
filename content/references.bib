	number = {5},
	urldate = {2016-02-15},
	journal = {The Plant Journal},
	author = {Rana, Debashis and van den Boogaart, Tom and O'Neill, Carmel M. and Hynes, Llewelyn and Bent, Elisabeth and Macpherson, Lee and Park, Jee Young and Lim, Yong Pyo and Bancroft, Ian},
	month = dec,
