	keywords = {BAC libraries, Brassica napus, Brassica rapa, genome evolution, genome microstructure, genome organization, microsynteny},
	pages = {725--733},
	file = {Full Text PDF:/media/shared/Zotero/storage/9MW7TFTX/Rana et al. - 2004 - Conservation of the microstructure of genome segme.pdf:application/pdf;Snapshot:/media/shared/Zotero/storage/634PBMFU/abstract.html:text/html}
